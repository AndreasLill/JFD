<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Night - Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.NoActionBar">

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="elevationOverlayEnabled">false</item>
        <!-- Menu -->
        <item name="popupMenuBackground">?attr/colorElevatedSurface</item>
        <!-- Custom Styles -->
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:itemTextAppearance">@style/AppStyle.TextAppearance.MenuItem</item>
        <item name="searchViewStyle">@style/AppStyle.SearchViewStyle</item>
        <item name="snackbarStyle">@style/AppStyle.Snackbar</item>
        <item name="snackbarButtonStyle">@style/AppStyle.DialogButton</item>
        <item name="snackbarTextViewStyle">@style/AppStyle.SnackbarText</item>
        <!-- Default font -->
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.Default" parent="AppTheme.Base">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_900</item>
        <item name="colorPrimaryDark">@color/purple_900</item>
        <item name="colorAccent">@color/deep_purple_300</item>
        <item name="colorOnPrimary">@color/blue_gray_100</item>
        <!-- Secondary colors -->
        <item name="colorSecondary">?attr/colorAccent</item>
        <item name="colorOnSecondary">?attr/colorOnPrimary</item>
        <!-- Surface colors-->
        <item name="colorSurface">@color/gray_900</item>
        <item name="colorElevatedSurface">@color/gray_800</item>
        <item name="colorPrimarySurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorTextPrimary</item>
        <!-- Background colors -->
        <item name="colorBackground">@color/dark</item>
        <item name="android:colorBackground">?attr/colorBackground</item>
        <item name="colorOnBackground">?attr/colorOnSurface</item>
        <!-- Custom attributes. -->
        <item name="colorHint">@color/gray_600</item>
        <item name="colorTextPrimary">@color/blue_gray_100</item>
        <item name="colorTextSecondary">@color/gray_500</item>
        <item name="colorCheckMark">@color/green_300</item>
        <item name="colorDictionaryCommonTag">@color/green_300</item>
        <item name="colorDictionaryCommonHint">@color/gray_850</item>
        <item name="colorCardCorrect">@color/green_700</item>
        <item name="colorCardIncorrect">@color/amber_700</item>
    </style>
</resources>