<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Appearances -->
    <style name="AppStyle.TextAppearance.MenuItem" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="AppStyle.TextAppearance.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorTextSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="AppStyle.TextAppearance.Tab" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppStyle.TextAppearance.NavigationDrawer" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Buttons -->
    <style name="AppStyle.DialogButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
    <style name="AppStyle.RoundButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/background_button_round</item>
        <item name="android:foreground">@drawable/ripple_round</item>
        <item name="android:tint">?attr/colorTextPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="AppStyle.RoundButton.Transparent" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:foreground">@drawable/ripple_round</item>
        <item name="android:tint">?attr/colorTextPrimary</item>
    </style>

    <!-- Snackbar -->
    <style name="AppStyle.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/AppStyle.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
        <item name="backgroundTint">@color/gray_800</item>
    </style>
    <style name="AppStyle.SnackbarText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Input -->
    <style name="AppStyle.InputHintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">11sp</item>
        <item name="android:textColorHint">?attr/colorHint</item>
    </style>

    <!-- Toolbar -->
    <style name="AppStyle.ToolbarTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppStyle.ToolbarSubtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Dialog -->
    <style name="AppStyle.ThemeOverlay.Dialog.BottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppStyle.Dialog.BottomSheet</item>
    </style>
    <style name="AppStyle.Dialog.BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="shapeAppearance">@style/AppStyle.ShapeAppearance.Dialog.BottomSheet</item>
    </style>
    <style name="AppStyle.ShapeAppearance.Dialog.BottomSheet" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>